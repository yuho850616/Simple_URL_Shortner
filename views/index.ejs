<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
<div class="container">
    <h1>Simple URL Shortener</h1>
    <form action="/final_url" method="POST". class=" form-inline">
        <label for="fullUrl" class ="sr-only">Original Url</label>
        <input required placeholder="Enter the URL here" type="text" name="fullUrl" id="fullUrl" class="form-control">
        <button class="btn btn-primary" type="submit">Shorten URL</button>
    </form>

    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Original URL</th>
                <th>Shorten URL</th>
            </tr>
        </thead>
        <tbody>
            <% final_url.forEach(shortUrl => { %>
                <tr>
                  <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                  <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>